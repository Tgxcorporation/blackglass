<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>87266</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>player.hasmedia+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#Fanart.1:#Trakt.TrendingMovies.Fanart.1</define>
	<define>#Fanart.2:#Trakt.TrendingMovies.Fanart.2</define>
	<define>#header.label:#Trakt.Translation.TrendingMovies.Label</define>
	<define>#header.background:hover_trakt.png</define>
	<animation effect="fade" time="250" start="100" end="100">WindowClose</animation>
	<controls>    

		<import>common.window.background.xml</import>
		<import>Trakt.Common.Fanart.xml</import>
		<import>common.window.overlay.xml</import>
		<import>common.window.time.xml</import>
		<import>common.facade.video.xml</import>
		  


		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)">conditional</animation>
			<control>
				<type>fadelabel</type>
				<width>850</width>
				<wrapString> : : : </wrapString>
				<id>0</id>
				<posX>30</posX>
				<posY>10</posY>
				<label>#header.label</label>
				<font>font28</font>
				<align>left</align>
				<textcolor>60ffffff</textcolor>
			</control>
			<control>
				<description>fanart list</description>
				<type>image</type>
				<id>60</id>
				<posX>62</posX> 
				<posY>88</posY> 
				<width>245</width> 
				<height>348</height> 
				<colordiffuse>ffffffff</colordiffuse>
				<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<keepaspectratio>no</keepaspectratio>
				<centered>yes</centered>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<description>Highlight item</description>
				<type>image</type>
				<id>1</id>
				<posX>30</posX>
				<posY>83</posY>
				<width>283</width>
				<height>360</height>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<texture flipY="true" diffuse="Thumb_Mask.png">DVDCase.png</texture>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program title</description>
				<id>0</id>
				<posX>30</posX>
				<posY>465</posY>
				<width>420</width>
				<font>font20</font>
				<label>#Trakt.Movie.Title</label>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<wrapString> : : : </wrapString>
			</control>
			<control>
				<description>Released</description>
				<id>0</id>
				<type>fadelabel</type>
				<label>#Trakt.Movie.Released     #Trakt.Movie.Genres</label>
				<width>420</width>
				<wrapString> : : : </wrapString>
				<posX>30</posX>
				<posY>500</posY>
				<textcolor>90FFFFFF</textcolor>
				<font>font13</font>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Rating</description>
				<id>0</id>
				<posX>30</posX>
				<posY>525</posY>
				<width>420</width>
				<font>font13</font>
				<label>#Trakt.Movie.Ratings.Percentage%     #Trakt.Movie.Ratings.Votes #Trakt.Translation.Votes.Label     #Trakt.Movie.Watchers.Extra</label>
				<visible>!string.equals(#Trakt.Movie.Ratings.Percentage,)+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<wrapString> : : : </wrapString>
			</control>

			<control>
				<description>Runtime value</description>
				<type>fadelabel</type>
				<id>1</id>
				<posX>30</posX>
				<posY>550</posY>
				<width>420</width>
				<label>#Trakt.Movie.Year     #Trakt.Movie.Certification     #Trakt.Movie.Runtime mins</label>
				<textcolor>90FFFFFF</textcolor>
				<visible>!string.equals(#Trakt.Movie.Runtime,)+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]+!string.equals(#runtime,0)+!string.equals(#year,1900)</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<wrapString> : : : </wrapString>
				<font>font13</font>
			</control>

			<control>
				<description>Plot value</description>
				<type>textboxscrollup</type>
				<id>1</id>
				<posX>30</posX>
				<posY>577</posY>
				<width>420</width>
				<height>124</height>
				<label>#Trakt.Movie.Overview</label>
				<font>font12</font>
				<textcolor>FFFFFFFF</textcolor>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + !player.hasmedia</visible>
				<seperator>: : :</seperator>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>

			<control>
				<type>textboxscrollup</type>
				<description>Selected item Label</description>
				<id>0</id>
				<posX>38</posX>
				<posY>651</posY>
				<width>1220</width>
				<font>font24</font>
				<height>45</height>
				<textalign>center</textalign>
				<label>#selecteditem</label>
				<visible>[facadeview.filmstrip|facadeview.coverflow]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<animation effect="fade" time="150">WindowClose</animation>	
			</control>
		</control>








		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<visible>control.hasfocus(50)</visible>
			<animation effect="fade" time="50">WindowClose</animation>
			<animation effect="fade" time="50">WindowOpen</animation>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>385</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>ffffffff</dimColor>
			<visible>!control.hasfocus(50)</visible>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" end="-208,0" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<width>333</width>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>button group</description>
				<type>group</type>
				<posX>0</posX>
				<posY>100</posY>
				<layout>StackLayout(0, Vertical, true)</layout>
				<control>
					<description>View-As</description>
					<type>button</type>
					<id>2</id>
					<label>-</label>
					<onright>50</onright>
					<onup>17</onup>
					<ondown>2</ondown>
				</control>
			</control>
		</control>

	</controls>
</window>
