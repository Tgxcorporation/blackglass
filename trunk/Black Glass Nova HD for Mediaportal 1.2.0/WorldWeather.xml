      <description>DUMMY BUTTON</description>
      <type>button</type>
      <id>5050</id>
      <posX>45</posX>
      <posY>0</posY>
      <width>1920</width>
      <height>1080</height>
      <onright>50</onright>
      <onleft>2</onleft>
      <textureFocus>-</textureFocus>
      <textureNoFocus>-</textureNoFocus>
      <visible>!string.equals(#WorldWeather.View,Image)</visible>
