<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>9816</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>player.hasmedia</allowoverlay>
	<define>#header.label:#currentmodule</define>
	<define>#header.background:hover_my tv series.png</define>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>

		<import>common.window.xml</import>
		<control>
			<description>Default Background</description>
			<type>image</type>
			<id>0</id>
			<posX>0</posX>
			<posY>0</posY>
			<width>1920</width>
			<height>1080</height>
			<texture>#TVSeries.Current.Fanart</texture>	
			<animation effect="fade" time="1">WindowClose</animation>
			<animation effect="fade" time="250">WindowOpen</animation>			
		</control>
		<import>common.window.time.xml</import>
		<import>common.facade.background.xml</import>
		<import>common.facade.itemcount.currentmodule.xml</import>
		<import>common.facade.video.xml</import>
		


		
		<control>
			<type>image</type>
			<description>artist art image</description>
			<id>1000</id>
			<posX>77</posX>
			<posY>622</posY>
			<width>295</width>
			<height>420</height>
			<keepaspectratio>yes</keepaspectratio>
			<centered>yes</centered>
			<zoom>yes</zoom>
			<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
			<visible>[facadeview.list|facadeview.album|facadeview.playlist]+control.hasfocus(50)</visible>
			<animation effect="fade" time="250" reversible="false">visible</animation>
		</control>
		<control>
			<description>Case</description>
			<type>image</type>
			<posX>37</posX>
			<posY>615</posY>
			<width>342</width>
			<height>435</height>
			<colordiffuse>ffffffff</colordiffuse>
			<texture flipY="true" diffuse="Thumb_Mask.png">DvdCase.png</texture>
			<visible>[facadeview.list|facadeview.album|facadeview.playlist]+control.hasfocus(50)+control.hasthumb(1000)</visible>
			<animation effect="fade" time="250">hidden</animation>
			<animation effect="fade" time="250">visible</animation>
		</control>

		<control>
			<type>image</type>
			<id>0</id>
			<posX>-579</posX>
			<posY>4</posY>
			<width>627</width>
			<height>1071</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<visible>![control.hasfocus(2)|control.hasfocus(3)]</visible>
			<animation effect="fade" time="50">WindowClose</animation>
			<animation effect="fade" time="50">WindowOpen</animation>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>84</buttonwidth>
			<buttonheight>1080</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>637</width>
			<height>1080</height>
			<dimColor>ffffffff</dimColor>
			<visible>[control.hasfocus(2)|control.hasfocus(3)]</visible>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-312,0" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" end="-312,0" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-312,0" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>627</width>
				<height>1080</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>45</posX>
				<posY>52</posY>
				<label>#header.label</label><width>500</width>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>71</posY>
				<width>579</width>
				<height>79</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<type>group</type>
				<layout>StackLayout(0, Vertical, true)</layout>
				<posX>0</posX>
				<posY>150</posY>
				<control>
					<description>Switch Layout</description>
					<type>button</type>
					<id>2</id>						
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>17</onup>
					<ondown>3</ondown>					
				</control> 
				<control>
					<description>Refresh</description>
					<type>button</type>
					<id>3</id>
					<label>184</label>
					<onleft>50</onleft>
					<onright>50</onright>
					<onup>2</onup>
					<ondown>2</ondown>					
				</control>		
			</control>
		</control>

	</controls>
</window>
