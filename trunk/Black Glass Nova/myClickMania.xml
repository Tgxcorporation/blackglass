<window>
	<id>5555</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>[facadeview.filmstrip|facadeview.list|facadeview.smallicons|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label:ClickMania</define>
	<define>#header.background:hover_clickmania.png</define>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<import>common.window.xml</import>
		<import>common.time.xml</import>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>458</posX>
			<posY>48</posY>
			<width>948</width>
			<height>766</height>
			<texture>bg_facade.png</texture>
		</control>
		<control>
			<description>LISTVIEW LEFT Backdrop Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>-890</posX>
			<posY>595</posY>
			<width>1372</width>
			<height>500</height>
			<texture>bg_tvguide.png</texture>
		</control>
		<control>
			<type>label</type>
			<description>Score: label</description>
			<id>201</id>
			<posX>30</posX>
			<posY>637</posY>
			<label>19005</label>
		</control>
		<control>
			<type>label</type>
			<description>Score</description>
			<id>202</id>
			<posX>430</posX>
			<posY>637</posY>
			<label>#cm_score</label>
			<align>right</align>
		</control> 
		<control>
			<type>image</type>
			<posX>0</posX>
			<posY>635</posY>
			<width>449</width>
			<height>35</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
		</control>
		<control>
			<type>label</type>
			<description>Highscore: label</description>
			<id>203</id>
			<posX>30</posX>
			<posY>672</posY>
			<label>19008</label>
		</control>
		<control>
			<type>label</type>
			<description>Highscore</description>
			<id>204</id>
			<posX>430</posX>
			<posY>672</posY>
			<label>#cm_highscore</label>
			<align>right</align>
		</control>
		<control>
			<type>image</type>
			<posX>0</posX>
			<posY>670</posY>
			<width>449</width>
			<height>35</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
		</control>

		<control>
			<type>clickmania</type>
			<description>ClickMania control</description>
			<id>10</id>
			<posX>621</posX>
			<posY>103</posY>
			<width>528</width>
			<height>600</height>
			<colordiffuse>60ffffff</colordiffuse>
			<onleft>2</onleft>
			<onright>2</onright>
			<onup>2</onup>
			<ondown>2</ondown>
			<nextblocky>100</nextblocky>
			<texturefocus>panel_focus.png</texturefocus>
			<texture>panel_focus.png</texture>
			<font>font18</font>
			<textcolor>ff000000</textcolor>
			<onback>2</onback>
		</control>




		<!-- MENU -->

		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" delay="250" time="250">WindowOpen</animation>
			<animation effect="fade" time="0">WindowClose</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="250" start="-400,0" reversible="true">WindowOpen</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>				
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(10)</visible>
			</control>
			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="fade" time="450" reversible="true">visible</animation>
				<animation effect="fade" time="450" reversible="true">hidden</animation>
				<posX>0</posX>
				<posY>100</posY>
				<visible>!control.hasfocus(10)</visible>
				<layout>StackLayout</layout>
				<control>
					<description>New Game</description>
					<type>button</type>
					<id>2</id>
					<label>19002</label>
					<onright>10</onright>
					<onup>17</onup>
					<ondown>8</ondown>
				</control>
				<control>
					<type>button</type>
					<description>Take back last move</description>
					<id>8</id>
					<label>Take back</label>
					<onright>10</onright>
					<onup>2</onup>
					<ondown>4</ondown>
				</control>
				<control>
					<type>togglebutton</type>
					<description>Sounds</description>
					<id>4</id>
					<label>19004</label>
					<onright>10</onright>
					<onup>8</onup>
					<ondown>6</ondown>
				</control> 
				<control>
					<type>togglebutton</type>
					<description>Keyboard</description>
					<id>6</id>
					<label>Keyboard</label>
					<onright>10</onright>
					<onup>4</onup>
					<ondown>2</ondown>
				</control>
			</control>
		</control>
	</controls>
</window>