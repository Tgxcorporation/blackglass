<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<controls>
		<control>
			<type>label</type>
			<description>Number of Files Label</description>
			<id>0</id>
			<posX>650</posX>
			<posY>688</posY>
			<label>#itemcount #currentmodule</label>
			<font>font12</font>
			<align>left</align>
			<textcolor>60ffffff</textcolor>
			<visible>[facadeview.list|facadeview.album|facadeview.playlist]+string.equals(#itemcount)+string.equals(#currentmodule)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
	</controls>
</window>