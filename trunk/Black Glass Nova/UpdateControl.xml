<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>7984</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>player.hasmedia+!facadeview.filmstrip</allowoverlay>
	<define>#header.label:Update Control</define>
	<define>#header.background:hover_updatecontrol.png</define>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<import>common.window.xml</import>
		<import>common.window.time.xml</import>
		<import>common.facade.background.basic.xml</import>
		<!-- <import>common.facade.itemcount.currentmodule.xml</import> -->


		<!-- *** Item Selection *** -->
	

		<control>
			<type>fadelabel</type>
			<id>0</id>
			<posX>30</posX>
			<posY>418</posY>
			<width>560</width>
			<font>font22</font>
			<label>#UpdateControl.UpdateTitle</label>
		</control>
		<control>
			<type>image</type>
			<posX>0</posX>
			<posY>430</posY>
			<width>609</width>
			<height>35</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
		</control>
		<control>
			<description>Update Info</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>30</posX>
			<posY>467</posY>
			<width>510</width>
			<height>68</height>
			<font>font16</font>
			<label>#UpdateControl.UpdateDate, #UpdateControl.UpdateSize, #UpdateControl.UpdateSeverity, #UpdateControl.UpdateType (#UpdateControl.UpdateInstallType)</label>
			<visible>!string.equals(#UpdateControl.UpdateTitle, )</visible>
			<textcolor>90ffffff</textcolor>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
			<control>
			<type>image</type>
			<id>0</id>
			<posX>550</posX>
			<posY>472</posY>
			<width>55</width>
			<height>55</height>
			<texture>#UpdateControl.UpdateSeverityImage</texture>
			<visible>!string.equals(#UpdateControl.UpdateTitle, )</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>

		<control>
			<type>image</type>
			<posX>0</posX>
			<posY>500</posY>
			<width>609</width>
			<height>35</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
		</control>
		<control>
			<description>Description</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>30</posX>
			<posY>540</posY>
			<width>560</width>
			<height>164</height>
			<font>font16</font>
			<label>#UpdateControl.UpdateDescription</label>
		</control>


		<!-- *** Update list *** -->
		<control>
			<type>group</type>
			<control>
				<description>listcontrol</description>
				<type>listcontrol</type>
				<id>50</id>
				<onleft>2</onleft>
				<onright>2</onright>
				<scrollOffset>2</scrollOffset>
				<posX>640</posX>
				<width>640</width>
				<posY>430</posY>
				<height>300</height>
				<textureHeight>35</textureHeight>
				<itemWidth>40</itemWidth>
				<itemHeight>30</itemHeight>
				<IconXOff>10</IconXOff>
				<IconYOff>2</IconYOff>
				<textXOff2>630</textXOff2>
				<textYOff2>2</textYOff2>
				<textXOff3>630</textXOff3>
				<textYOff3>2</textYOff3>
				<font>font14</font>	
				<font2>font14</font2>	
				<font3>font14</font3>	
				<textYOff>2</textYOff>
				<spinWidth>30</spinWidth>
				<spinHeight>30</spinHeight>
				<spinPosX>1210</spinPosX>
				<spinPosY>685</spinPosY>
				<PinIconXOff>627</PinIconXOff> 
				<PinIconYOff>4</PinIconYOff>
			</control>
		</control>




		<!-- *** Buttons *** -->
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-193,0" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" end="-193,0" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-193,0" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>1</width>
				<height>1</height>
				<texture>black.png</texture>
				<visible>control.hasfocus(2)|control.hasfocus(3)|control.hasfocus(4)|control.hasfocus(5)</visible>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<type>group</type>
				<layout>StackLayout</layout>
				<posX>0</posX>
				<posY>100</posY>
				<control>
					<description>Show Updates</description>
					<type>button</type>
					<id>2</id>
					<label>Show installed updates</label>
					<onup>5</onup>
					<ondown>3</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Search Update</description>
					<type>button</type>
					<id>3</id>
					<label>Search for avilable updates</label>
					<onup>2</onup>
					<ondown>4</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Install Update</description>
					<type>button</type>
					<id>4</id>
					<label>Install update(s)</label>
					<onup>3</onup>
					<ondown>5</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Reboot</description>
					<type>button</type>
					<id>5</id>
					<label>Reboot</label>
					<onup>4</onup>
					<ondown>2</ondown>
					<onright>50</onright>
				</control>
			</control>

			<!-- *** Action *** -->
			<control>
				<description>Action</description>
				<type>fadelabel</type>
				<id>0</id>
				<posX>30</posX>
				<posY>670</posY>
				<width>700</width>
				<label>#UpdateControl.Action</label>
				<font>font14</font>
				<align>left</align>
			</control>
		</control>

	</controls>
</window>
