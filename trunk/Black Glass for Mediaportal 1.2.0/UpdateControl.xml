<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>7984</id>
	<defaultcontrol>2</defaultcontrol>
	<allowoverlay>player.hasmedia+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label:Update Control</define>
	<define>#header.background:hover_updatecontrol.png</define>
	<animation effect="fade" time="250" start="100" end="100">WindowClose</animation>
	<controls>
		<import>common.window.background.xml</import>
		<import>common.window.video.fanart.xml</import>
		<import>common.window.overlay.xml</import>
		<import>common.window.accessories.xml</import>
		<import>common.window.time.xml</import>
		<import>common.facade.background.basic.xml</import>
		<!-- <import>common.facade.itemcount.currentmodule.xml</import> -->

		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<control>
				<type>label</type>
				<id>0</id>
				<posX>30</posX>
				<posY>10</posY>
				<label>#header.label</label>
				<font>font28</font>
				<align>left</align>
				<textcolor>60ffffff</textcolor>
				<visible>![control.hasfocus(2)|control.hasfocus(3)|control.hasfocus(4)|control.hasfocus(5)|control.hasfocus(6)|control.hasfocus(7)]</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>

			<!-- *** Progress *** -->
			<control>
				<type>fadelabel</type>
				<id>0</id>
				<posX>30</posX>
				<posY>134</posY>
				<width>385</width>
				<label>Progress: #UpdateControl.DownloadOverallProgress%, #UpdateControl.InstallOverallProgress% done.</label>
				<font>font16</font>
				<wrapString> : : : </wrapString>
				<visible>!string.equals(#UpdateControl.DownloadOverallProgress,0)+control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>


			<!-- *** Item Selection *** -->
			<control>
				<type>image</type>
				<id>0</id>
				<posX>20</posX>
				<posY>85</posY>
				<width>37</width>
				<height>37</height>
				<texture>#UpdateControl.UpdateSeverityImage</texture>
				<visible>!string.equals(#UpdateControl.UpdateTitle, )+control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>

			<control>
				<type>fadelabel</type>
				<id>0</id>
				<posX>60</posX>
				<posY>82</posY>
				<width>325</width>
				<font>font22</font>
				<label>#UpdateControl.UpdateTitle</label>
				<animation effect="fade" time="250">visiblechange</animation>
				<visible>control.hasfocus(50)</visible>
				<wrapString> : : : </wrapString>
			</control>

			<control>
				<type>label</type>
				<id>0</id>
				<posX>510</posX>
				<posY>665</posY>
				<font>font16</font>
				<textcolor>60ffffff</textcolor>
				<label>#UpdateControl.AvailableUpdateSelectionSize selected</label>
				<visible>!string.equals(#UpdateControl.AvailableUpdateCount,0)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>

			<control>
				<description>Update Info</description>
				<type>textboxscrollup</type>
				<id>0</id>
				<posX>30</posX>
				<posY>179</posY>
				<width>385</width>
				<height>68</height>
				<font>font16</font>
				<label>#UpdateControl.UpdateDate, #UpdateControl.UpdateSize, #UpdateControl.UpdateSeverity, #UpdateControl.UpdateType (#UpdateControl.UpdateInstallType)</label>
				<visible>!string.equals(#UpdateControl.UpdateTitle, )+control.hasfocus(50)</visible>
				<textcolor>90ffffff</textcolor>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>

			<control>
				<description>Description</description>
				<type>textboxscrollup</type>
				<id>0</id>
				<posX>30</posX>
				<posY>255</posY>
				<width>385</width>
				<height>292</height>
				<font>font14</font>
				<label>#UpdateControl.UpdateDescription</label>
				<animation effect="fade" time="250">visiblechange</animation>
				<visible>control.hasfocus(50)+player.hasmedia</visible>		
			</control>

			<control>
				<description>Description</description>
				<type>textboxscrollup</type>
				<id>0</id>
				<posX>30</posX>
				<posY>255</posY>
				<width>385</width>
				<height>438</height>
				<font>font14</font>
				<label>#UpdateControl.UpdateDescription</label>
				<animation effect="fade" time="250">visiblechange</animation>
				<visible>control.hasfocus(50)+!player.hasmedia</visible>		
			</control>

			<!-- *** Update list *** -->
			<control>
				<type>group</type>
				<control>
					<description>listcontrol</description>
					<type>listcontrol</type>
					<id>50</id>
					<onleft>2</onleft>
				</control>
			</control>
		</control>



		<!-- *** Buttons *** -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<visible>![control.hasfocus(2)|control.hasfocus(3)|control.hasfocus(4)|control.hasfocus(5)|control.hasfocus(6)|control.hasfocus(7)]</visible>
			<animation effect="fade" time="50">WindowClose</animation>
			<animation effect="fade" time="50">WindowOpen</animation>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>ffffffff</dimColor>
			<visible>control.hasfocus(2)|control.hasfocus(3)|control.hasfocus(4)|control.hasfocus(5)|control.hasfocus(6)|control.hasfocus(7)</visible>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" end="-208,0" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>30</posX>
				<posY>35</posY>
				<label>#header.label</label><width>333</width>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<type>group</type>
				<layout>StackLayout(0, Vertical, true)</layout>
				<posX>0</posX>
				<posY>100</posY>
				<control>
					<description>Show Updates</description>
					<type>button</type>
					<id>2</id>
					<label>Show installed updates</label>
					<onup>5</onup>
					<ondown>3</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Search Update</description>
					<type>button</type>
					<id>3</id>
					<label>Search for avilable updates</label>
					<onup>2</onup>
					<ondown>4</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Install Update</description>
					<type>button</type>
					<id>4</id>
					<label>Install update(s)</label>
					<onup>3</onup>
					<ondown>5</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Restore Points</description>
					<type>togglebutton</type>
					<id>5</id>
					<label>Restore Points</label>
					<onup>4</onup>
					<ondown>6</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Reboot</description>
					<type>button</type>
					<id>6</id>
					<label>Reboot</label>
					<onup>5</onup>
					<ondown>7</ondown>
					<onright>50</onright>
				</control>
				<control>
					<description>Clean</description>
					<type>button</type>
					<id>7</id>
					<label>Clean distribution folder</label>
					<onup>6</onup>
					<ondown>2</ondown>
					<onright>50</onright>
				</control>
			</control>

			<!-- *** Action *** -->
			<control>
				<description>Action</description>
				<type>fadelabel</type>
				<id>0</id>
				<posX>30</posX>
				<posY>670</posY>
				<width>700</width>
				<label>#UpdateControl.Action</label>
				<font>font14</font>
				<align>left</align>
			</control>
		</control>

	</controls>
</window>
