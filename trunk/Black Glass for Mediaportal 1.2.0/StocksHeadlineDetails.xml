<?xml version="1.0" encoding="utf-8"?>
<window>
	<allowoverlay>yes</allowoverlay>
	<controls>

		<!-- *** Headline Ticker *** -->
		<control>
			<description>Headline</description>
			<type>fadelabel</type>
			<id>0</id>
			<posX>410</posX>
			<posY>120</posY>
			<width>870</width>
			<font>font18bold</font>
			<label>#Stocks.HeadlineTicker</label>
			<visible>string.equals(#Stocks.Type,Headline)+!string.equals(#Stocks.HeadlineTicker, )</visible>
		</control>

		<!-- *** Headline Ticker Separator *** -->
		<control>
			<description>Headline Ticker Separator</description>
			<type>label</type>
			<id>0</id>
			<posX>410</posX>
			<posY>145</posY>
			<width>880</width>
			<label>____________________________________________________________________________________________________________</label>
			<textcolor>ff808080</textcolor>
			<visible>string.equals(#Stocks.Type,Headline)+!string.equals(#Stocks.HeadlineTicker, )</visible>
		</control>

		<!-- *** Headline Item List *** -->
		<control>
			<description>listcontrol</description>
			<type>listcontrol</type>
			<id>100</id>
			<posY>220</posY>
			<height>350</height>
			<onleft>2</onleft>
			<font>font12</font>
			<IconXOff>13</IconXOff>
			<IconYOff>13</IconYOff>
			<visible>string.equals(#Stocks.Type,Headline)+string.equals(#Stocks.View,List)</visible>
		</control>

		<!-- *** Headline Item Separator *** -->
		<control>
			<description>Separator</description>
			<type>label</type>
			<id>0</id>
			<posX>410</posX>
			<posY>577</posY>
			<width>880</width>
			<label>____________________________________________________________________________________________________________</label>
			<textcolor>ff808080</textcolor>
			<visible>string.equals(#Stocks.Type,Headline)+string.equals(#Stocks.View,List)</visible>
		</control>

		<!-- *** Headline Item Properties *** -->
		<control>
      <description>Headline Item Description</description>
      <type>textbox</type>
      <id>0</id>
      <posX>410</posX>
      <posY>600</posY>
      <width>600</width>
      <height>120</height>
      <label>#Stocks.HeadlineItemDescription</label>
			<font>font10</font>
			<visible>string.equals(#Stocks.Type,Headline)+string.equals(#Stocks.View,List)+!string.equals(#Stocks.HeadlineItemDescription,)</visible>
    </control>

	</controls>
</window>
