<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>87269</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>player.hasmedia+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#Fanart.1:#Trakt.WatchListEpisodes.Fanart.1</define>
	<define>#Fanart.2:#Trakt.WatchListEpisodes.Fanart.2</define>
	<define>#header.label:#Trakt.Translation.WatchListEpisodes.Label | #Trakt.WatchList.CurrentUser</define>
	<define>#header.background:hover_trakt.png</define>
	<animation effect="fade" time="250" start="100" end="0">WindowClose</animation>
	<animation effect="fade" time="250" start="0" end="100">WindowOpen</animation>
	<controls>    

		<import>common.window.background.xml</import>
		<import>Trakt.Common.Fanart.xml</import>
		<import>common.window.overlay.xml</import>
		<import>common.window.accessories.xml</import>
		<import>common.window.time.xml</import>
		<import>common.facade.background.xml</import>
		<control>
			<description>Itemcount Itemtype</description>
			<type>label</type>
			<id>0</id>
			<posX>510</posX>
			<posY>665</posY>
			<label>#Trakt.Items</label>
			<font>font16</font>
			<textcolor>60ffffff</textcolor>
			<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
		</control>
		<import>common.facade.recordings.xml</import>

		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<control>
				<type>fadelabel</type>
				<width>850</width>
				<wrapString> : : : </wrapString>
				<id>0</id>
				<posX>30</posX>
				<posY>10</posY>
				<label>#header.label</label>
				<font>font28</font>
				<align>left</align>
				<textcolor>60ffffff</textcolor>
				<visible>control.hasfocus(50)</visible>		
				<animation effect="fade" time="250">visiblechange</animation>
			</control>
			<control>
				<id>1000</id>
				<type>image</type>
				<posX>39</posX>
				<posY>78</posY>
				<width>332</width>
				<height>188</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
				<keepaspectratio>yes</keepaspectratio>
				<centered>yes</centered>
				<zoom>yes</zoom>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]+control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>30</posX>
				<posY>70</posY>
				<width>352</width>
				<height>233</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">VideoCase.png</texture>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]+control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program title</description>
				<id>0</id>
				<posX>30</posX>
				<posY>335</posY>
				<width>420</width>
				<font>font20</font>
				<label>#Trakt.Episode.Title</label>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
				<wrapString> : : : </wrapString>
			</control>
			<control>
				<description>Released</description>
				<id>0</id>
				<type>label</type>
				<label>#Trakt.Show.Title     #Trakt.Translation.Season.Label #Trakt.Episode.Season     #Trakt.Translation.Episode.Label #Trakt.Episode.Number</label>
				<posX>30</posX>
				<posY>370</posY>
				<textcolor>90FFFFFF</textcolor>
				<font>font13</font>
				<visible>!string.equals(#Trakt.Episode.Season,)+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Airday</description>
				<id>0</id>
				<posX>30</posX>
				<posY>395</posY>
				<width>420</width>
				<font>font13</font>
				<label>#Trakt.Show.Year     #Trakt.Show.AirDay     #Trakt.Show.AirTime</label>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + control.hasfocus(50)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
				<wrapString> : : : </wrapString>
			</control>


			<control>
				<description>Runtime value</description>
				<type>fadelabel</type>
				<id>1</id>
				<posX>30</posX>
				<posY>420</posY>
				<width>420</width>
				<label>#Trakt.Show.Network     #Trakt.Episode.Runtime mins</label>
				<textcolor>90FFFFFF</textcolor>
				<visible>!string.equals(#Trakt.Episode.Runtime,)+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + control.hasfocus(50)+!string.equals(#runtime,0)+!string.equals(#year,1900)</visible>
				<animation effect="fade" time="250">visiblechange</animation>
				<wrapString> : : : </wrapString>
				<font>font13</font>
			</control>

			<control>
				<description>Plot value</description>
				<type>textboxscrollup</type>
				<id>1</id>
				<posX>30</posX>
				<posY>447</posY>
				<width>420</width>
				<height>260</height>
				<label>#Trakt.Episode.Overview</label>
				<font>font13</font>
				<textcolor>FFFFFFFF</textcolor>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist] + control.hasfocus(50) + !player.hasmedia</visible>
				<seperator>: : :</seperator>
				<animation effect="fade" time="250">visiblechange</animation>
			</control>
		</control>







		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<visible>![control.hasfocus(2)]</visible>
			<animation effect="fade" time="50">WindowClose</animation>
			<animation effect="fade" time="50">WindowOpen</animation>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>ffffffff</dimColor>
			<visible>[control.hasfocus(2)]</visible>
			<animation effect="fade" time="250" start="75" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">visible</animation>
			<animation effect="fade" time="250" end="75" reversible="false">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" end="-208,0" reversible="false">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="250" start="-208,0" reversible="false">WindowOpen</animation>
			<animation effect="fade" time="250" start="75" reversible="false">WindowOpen</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
			</control>
			<control>
				<id>0</id>
				<type>label</type>
				<posX>30</posX>
				<posY>35</posY>
				<label>#header.label</label>
				<width>333</width>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>button group</description>
				<type>group</type>
				<posX>0</posX>
				<posY>100</posY>
				<layout>StackLayout(0, Vertical, true)</layout>
				<control>
					<description>View-As</description>
					<type>button</type>
					<id>2</id>
					<label>-</label>
					<onright>50</onright>
					<onup>17</onup>
					<ondown>2</ondown>
				</control>
			</control>
		</control>

	</controls>
</window>
