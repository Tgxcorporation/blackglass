<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>6</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>player.hasmedia+[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label:3</define>
	<define>#useSelectedFanart:Yes</define>
	<define>#header.background:hover_my videos.png</define>
	<animation effect="fade" time="250" start="100" end="100">WindowClose</animation>
	<controls>
		<import>common.window.background.xml</import>
		<import>common.window.video.fanart.xml</import>
		<import>common.window.overlay.xml</import>
		<import>common.window.time.xml</import>
		<import>common.facade.recordings.xml</import>
		<import>common.facade.dummy.xml</import>  
		
		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)">conditional</animation>
			<control>
				<type>fadelabel</type>
				<width>850</width>
				<wrapString> : : : </wrapString>
				<id>0</id>
				<posX>30</posX>
				<posY>10</posY>
				<label>#header.label</label>
				<font>font28</font>
				<align>left</align>
				<textcolor>60ffffff</textcolor>
			</control>
			<control>
				<id>1000</id>
				<type>image</type>
				<posX>39</posX>
				<posY>78</posY>
				<width>332</width>
				<height>188</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
				<keepaspectratio>yes</keepaspectratio>
				<centered>yes</centered>
				<zoom>yes</zoom>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>30</posX>
				<posY>70</posY>
				<width>352</width>
				<height>233</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">VideoCase.png</texture>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program title</description>
				<id>0</id>
				<posX>30</posX>
				<posY>320</posY>
				<width>360</width>
				<font>font22</font>
				<label>#selecteditem</label>
				<wrapString> : : : </wrapString>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program</description>
				<id>0</id>
				<posX>30</posX>
				<posY>370</posY>
				<label>#selecteditem2</label>
				<textcolor>ffffffff</textcolor>
				<visible>[facadeview.smallicons|facadeview.list|facadeview.largeicons|facadeview.album|facadeview.playlist]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
			</control>
			<control>
				<type>textboxscrollup</type>
				<description>Selected item Label</description>
				<id>0</id>
				<posX>38</posX>
				<posY>651</posY>
				<width>1220</width>
				<font>font24</font>
				<height>45</height>
				<textalign>center</textalign>
				<label>#selecteditem</label>
				<visible>[facadeview.filmstrip|facadeview.coverflow]</visible>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<animation effect="fade" time="150">WindowClose</animation>	
			</control>
		</control>

		<import>myvideoHiddenMenu.xml</import>

	</controls>
</window>