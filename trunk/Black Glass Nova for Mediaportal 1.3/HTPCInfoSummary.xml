		</control>
		<control>
			<description>Energy Consumption Value</description>
			<type>label</type>
			<id>1</id>
			<posX>840</posX>
			<posY>355</posY>
			<width>430</width>
			<label>#HTPCInfo.EnergyConsumptionPower (#HTPCInfo.EnergyConsumptionCost)</label>
			<font>font12</font>
			<visible>control.IsVisible(53)</visible>
		</control>

	</controls>
</window>
