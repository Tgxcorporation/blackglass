<?xml version="1.0" encoding="utf-8"?>
<window>
	<controls>
		<!-- Top Bar controls -->

		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)+!control.isvisible(51)">conditional</animation>
			<visible>control.isvisible(50)|control.isvisible(51)</visible>
			<control>
				<type>fadelabel</type>
				<width>850</width>
				<wrapString> : : : </wrapString>
				<id>0</id>
				<posX>30</posX>
				<posY>5</posY>
				<label>#header.label</label>
				<font>font28</font>
				<align>left</align>
				<textcolor>60ffffff</textcolor>
			</control>

			<control>
				<description>Parental controls Lock Indicator</description>
				<type>image</type>
				<id>16</id>
				<posX>32</posX>
				<posY>58</posY>
				<width>20</width>
				<height>20</height>
				<texture>lock2.png</texture>
			</control>
			<control>
				<description>Current Category</description>
				<type>label</type>
				<id>9916</id>
				<posX>30</posX>
				<posY>56</posY>
				<font>font13</font>
				<width>900</width>
				<label>#MovingPictures.CurrentNode.name</label>
				<visible>!control.isvisible(16)+!control.isvisible(17)</visible>
				<animation effect="fade" time="150">visiblechange</animation>
			</control>
			<control>
				<description>Current Category / Filter</description>
				<type>label</type>
				<id>9917</id>
				<posX>30</posX>
				<posY>56</posY>
				<font>font13</font>
				<width>900</width>
				<label>#MovingPictures.CurrentNode.name / #MovingPictures.Filter.Name</label>
				<visible>!control.isvisible(16)+control.isvisible(17)</visible>
				<animation effect="fade" time="150">visiblechange</animation>
			</control>
			<control>
				<description>Current Category</description>
				<type>label</type>
				<id>9918</id>
				<posX>60</posX>
				<posY>56</posY>
				<font>font13</font>
				<width>870</width>
				<label>#MovingPictures.CurrentNode.name</label>
				<visible>control.isvisible(16)+!control.isvisible(17)</visible>
				<animation effect="fade" time="150">visiblechange</animation>
			</control>
			<control>
				<description>Current Category / Filter</description>
				<type>label</type>
				<id>9919</id>
				<posX>60</posX>
				<posY>56</posY>
				<font>font13</font>
				<width>870</width>
				<label>#MovingPictures.CurrentNode.name / #MovingPictures.Filter.Name</label>
				<visible>control.isvisible(16)+control.isvisible(17)</visible>
				<animation effect="fade" time="150">visiblechange</animation>
			</control>

			<control>
				<description>Date</description>
				<type>label</type>
				<id>0</id>
				<posX>1258</posX>
				<posY>42</posY>
				<label>#date</label>
				<align>right</align>
				<font>font11</font>
				<visible>!plugin.isenabled(World Weather)</visible>
				<textcolor>aaffffff</textcolor>
			</control> 
			<control>
				<description>Date</description>
				<type>label</type>
				<id>0</id>
				<posX>1258</posX>
				<posY>42</posY>
				<label>#WorldWeather.TodayTemperature     #date</label>
				<align>right</align>
				<font>font11</font>
				<visible>plugin.isenabled(World Weather)</visible>
				<textcolor>aaffffff</textcolor>
			</control>
			<control>
				<description>Time</description>
				<type>label</type>
				<id>0</id>
				<posX>1258</posX>
				<posY>15</posY>
				<label>#time</label>
				<align>right</align>
				<font>font16</font>
				<textcolor>ffffffff</textcolor>
			</control>

			<control>
				<description>Default Image</description>
				<type>image</type>
				<id>1</id>
				<posX>10</posX>
				<posY>90</posY>
				<width>360</width>
				<height>360</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">Categories\Movies.png</texture>
				<keepaspectratio>yes</keepaspectratio>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<visible>control.isvisible(51)+!control.HasThumb(100)</visible>
			</control>
			<control>
				<description>Default Image</description>
				<type>image</type>
				<id>100</id>
				<posX>10</posX>
				<posY>90</posY>
				<width>360</width>
				<height>360</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">Categories\#MovingPictures.SelectedNode.name.png</texture>	
				<keepaspectratio>yes</keepaspectratio>
				<animation effect="slide" tween="circle" easing="out" time="200" start="900,0">visible</animation>
				<visible>control.isvisible(51)</visible>
			</control>
		</control>


