<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the list view
-->
<window>
	<controls>
		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)">conditional</animation>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)</visible>
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">visible</animation>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>458</posX>
				<posY>48</posY>
				<width>948</width>
				<height>766</height>
				<texture>bg_facade.png</texture>
			</control>
			<control>
				<type>image</type>
				<id>0</id>
				<posX>490</posX>
				<posY>47</posY>
				<width>790</width>
				<height>53</height>
				<texture>bg_facade_line_nofocus.png</texture>
				<colordiffuse>77ffffff</colordiffuse>
			</control>
			<control>
				<description>Cover Art</description>
				<type>image</type>
				<id>60</id>
				<keepaspectratio>no</keepaspectratio>
				<posX>62</posX> 
				<posY>88</posY> 
				<width>245</width> 
				<height>348</height> 
				<texture flipY="true" diffuse="Thumb_Mask.png">#MovingPictures.Coverart</texture>
			</control>
			<control>
				<description>Cover Art Glass Overlay</description>
				<type>image</type>
				<id>0</id>
				<posX>30</posX>
				<posY>83</posY>
				<width>283</width>
				<height>360</height>
				<texture flipY="true" diffuse="Thumb_Mask.png">DVDCase.png</texture>
			</control>
			<control>
				<description>Watched Icon Background</description>
				<type>image</type>
				<id>0</id>
				<posX>276</posX>
				<posY>109</posY>
				<width>32</width>
				<height>40</height>
				<colordiffuse>b0ffffff</colordiffuse>
				<texture>overlaywubg.png</texture>
			</control> 
			<control>
				<type>imagelist</type>
				<id>1</id>
				<posX>30</posX>
				<posY>456</posY>
				<width>302</width>
				<height>40</height>
				<textureWidth>22</textureWidth>
				<textureHeight>22</textureHeight>
				<subitems>
					<subitem>star_nofocus.png</subitem>
					<subitem>star_focus.png</subitem>
				</subitems>
				<orientation>horizontal</orientation>
				<align>left</align>
				<imagesToDraw>10</imagesToDraw>
				<percentage>#MovingPictures.SelectedMovie.score.rounded</percentage>
			</control>
			<control>
				<type>fadelabel</type>
				<description>Current program title</description>
				<id>1</id>
				<posX>30</posX>
				<posY>485</posY>
				<width>420</width>
				<font>font22</font>
				<label>#MovingPictures.SelectedMovie.title</label>
				<wrapString> : : : </wrapString>
			</control>
			<control>
				<description>Genre value</description>
				<type>fadelabel</type>
				<id>1</id>
				<posX>30</posX>
				<posY>527</posY>
				<width>420</width>
				<label>#MovingPictures.SelectedMovie.genres</label>
				<textcolor>90FFFFFF</textcolor>
				<wrapString> : : : </wrapString>
			</control>
		</control>


		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)">conditional</animation>

			<control>
				<description>Watched Icon</description>
				<type>image</type>
				<id>0</id>
				<posX>282</posX>
				<posY>114</posY>
				<width>24</width>
				<height>24</height>
				<texture>overlaywatched.png</texture>
				<colordiffuse>#ColorPlayed</colordiffuse>
				<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)+control.isvisible(9)</visible>
				<animation effect="fade" delay="250" time="150">visible</animation>
			</control>

			<control>
				<description>Un-Watched Icon</description>
				<type>image</type>
				<id>0</id>
				<posX>282</posX>
				<posY>114</posY>
				<width>24</width>
				<height>24</height>
				<texture>overlayunwatched.png</texture>
				<colordiffuse>#ColorAvailable</colordiffuse>
				<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)+!control.isvisible(9)</visible>
				<animation effect="fade" delay="250" time="150">visible</animation>
			</control>
		</control>

		<control>
			<type>group</type>
			<dimColor>ffffffff</dimColor>
			<animation effect="fade" time="150">WindowClose</animation>	
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="900,0" reversible="false">WindowClose</animation>
			<animation effect="slide" tween="sine" easing="in" time="200" end="193,0" condition="!control.hasfocus(50)">conditional</animation>
			<visible>[facadeview.largeicons|facadeview.smallicons] + control.isvisible(50) + !player.hasmedia</visible>
			<animation effect="slide" tween="circle" easing="out" time="200" start="900,0" reversible="false">visible</animation>
			<control>
				<description>Runtime value</description>
				<type>fadelabel</type>
				<id>1</id>
				<posX>30</posX>
				<posY>559</posY>
				<width>420</width>
				<label>#MovingPictures.SelectedMovie.year     #MovingPictures.SelectedMovie.runtime.localized.long     #MovingPictures.SelectedMovie.certification</label>
				<textcolor>90FFFFFF</textcolor>
				<wrapString> : : : </wrapString>
			</control>

			<control>
				<description>Summary</description>
				<type>textboxscrollup</type>
				<id>0</id>
				<posX>30</posX>
				<posY>593</posY>
				<width>420</width>
				<height>75</height>
				<font>font12</font>
				<textcolor>ffFFFFFF</textcolor>
				<label>#MovingPictures.SelectedMovie.summary</label>
			</control>


			<!-- Media logos [Thumbnails View] -->
			<control>
				<description>Video Codec</description>
				<type>image</type>
				<id>0</id>
				<posX>30</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.videocodec.png</texture>
			</control>

			<control>
				<description>Video Resolution</description>
				<type>image</type>
				<id>0</id>
				<posX>85</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.videoresolution.png</texture>
			</control>

			<control>
				<description>Video Aspect Ratio</description>
				<type>image</type>
				<id>0</id>
				<posX>140</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.videoaspectratio.png</texture>
			</control>

			<control>
				<description>Audio Codec</description>
				<type>image</type>
				<id>0</id>
				<posX>195</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.audiocodec.png</texture>
			</control>

			<control>
				<description>Audio Channels</description>
				<type>image</type>
				<id>0</id>
				<posX>250</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.audiochannels.png</texture>
			</control>

			<control>
				<description>Video Format</description>
				<type>image</type>
				<id>0</id>
				<posX>305</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.videoformat.png</texture>
			</control>

			<control>
				<description>Subtitles</description>
				<type>image</type>
				<id>0</id>
				<posX>360</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\#MovingPictures.LocalMedia.Subtitles.png</texture>
			</control>
			
			<control>
				<description>Fps</description>
				<type>image</type>
				<id>0</id>
				<posX>415</posX>
				<posY>675</posY>
				<width>89</width>
				<height>34</height>
				<keepaspectratio>yes</keepaspectratio>
				<texture>Logos\empty.png</texture>
			</control>
			
			<control>
				<description>Fps label</description>
				<id>0</id>
				<type>label</type>
				<posX>415</posX>
				<posY>686</posY>
				<!-- <label>#(string.format('{0:f2}', #MovingPictures.LocalMedia.videoframerate))</label> -->
				<label>#(iif(eq(#MovingPictures.LocalMedia.videoframerate,'25'), '25.000', #MovingPictures.LocalMedia.videoframerate))</label>
				<font>font8</font>
				<align>center</align>
				<width>50</width>
			</control>
			<control>
				<description>Fps label</description>
				<id>0</id>
				<type>label</type>
				<posX>415</posX>
				<posY>699</posY>
				<label>fps</label>
				<font>font7</font>
				<align>center</align>
				<width>50</width>
			</control>
		</control>

	</controls>
</window>