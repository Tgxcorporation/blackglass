<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!--version="1.0" encoding="utf-8"-->
<window>
	<controls>
		<control>
			<type>label</type>
			<description>Title (Filmstrip)</description>
			<id>640</id>
			<posX>57</posX>
			<posY>960</posY>
			<width>1830</width>
			<align>center</align>
			<font>font24</font>
			<label>#MovingPictures.SelectedMovie.title</label>
			<visible>facadeview.filmstrip+[control.isvisible(50)]</visible>
			<animation effect="fade" time="150">hidden</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0" reversible="false">visible</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="1350,0" reversible="false">hidden</animation>
			<animation effect="fade" time="150">WindowClose</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" start="1350,0" reversible="false">WindowOpen</animation>
			<animation effect="slide" tween="circle" easing="out" time="200" end="1350,0" reversible="false">WindowClose</animation>
		</control>
	</controls>
</window>