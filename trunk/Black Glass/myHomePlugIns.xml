<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>34</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<disabletopbar>yes</disabletopbar>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<rememberLastFocusedControl>yes</rememberLastFocusedControl>
	<controls>
		<control>
			<description>background image</description>
			<type>image</type>
			<id>1</id>
			<width>1280</width>
			<height>720</height>
			<texture>bg_homefull.jpg</texture>
		</control>
		<control>
			<description>Nav image</description>
			<type>image</type>
			<id>1</id>
			<posX>465</posX>
			<posY>170</posY>
			<width>350</width>
			<height>480</height>
			<texture>bg_home2.png</texture>
		</control>
		<control>
			<type>image</type>
			<posX>491</posX>
			<posY>171</posY>
			<width>300</width>
			<height>53</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
		</control>
		<control>
			<description>Menu</description>
			<type>menu</type>
			<id>50</id>
			<posX>491</posX>
			<posY>228</posY>
			<width>300</width>
			<textcolor>ffffffff</textcolor>
			<textColorNoFocus>60ffffff</textColorNoFocus>
			<dimColor>ffffffff</dimColor>
			<buttonTextXOff>10</buttonTextXOff>
			<buttonTextYOff>8</buttonTextYOff>
			<buttonOffset>0</buttonOffset>
			<buttonFont>font18</buttonFont>
			<buttonHeight>53</buttonHeight>
			<spaceBetweenButtons>0</spaceBetweenButtons>
			<numberOfButtons>7</numberOfButtons>
			<textureButtonFocus>bg_button_focus.png</textureButtonFocus>
			<textureButtonNoFocus>bg_button_nofocus.png</textureButtonNoFocus>
			<hoverX>-10</hoverX>
			<hoverY>-10</hoverY>
			<hoverWidth>1</hoverWidth>
			<hoverHeight>1</hoverHeight>
			<hoverKeepAspectratio>no</hoverKeepAspectratio>
			<scrollTime>90</scrollTime>
			<scrollTimeMin>45</scrollTimeMin>
			<textureBackground>-</textureBackground>
			<onright>19</onright>
			<onleft>17</onleft>
			<scrollOffset>0</scrollOffset>
			<animation effect="fade" time="500">VisibleChange</animation>
		</control>

		<!-- Date and Time -->
		<control>
			<description>Date</description>
			<type>label</type>
			<id>0</id>
			<posX>640</posX>
			<posY>134</posY>
			<label>#date</label>
			<align>center</align>
			<font>font12</font>
			<textcolor>aaffffff</textcolor>
			<visible>!plugin.isenabled(InfoService)</visible>
		</control>
		<control>
			<description>Date</description>
			<type>label</type>
			<id>0</id>
			<posX>640</posX>
			<posY>134</posY>
			<label>#infoservice.weather.today.temp     #date</label>
			<align>center</align>
			<font>font12</font>
			<textcolor>aaffffff</textcolor>
			<visible>plugin.isenabled(InfoService)</visible>
		</control>
		<control>
			<description>Time</description>
			<type>label</type>
			<id>0</id>
			<posX>640</posX>
			<posY>100</posY>
			<label>#time</label>
			<align>center</align>
			<font>font22</font>
			<textcolor>ffffffff</textcolor>
		</control>
		<!-- Action Buttons -->
		<control>
			<description>shutdown button</description>
			<type>button</type>
			<animation effect="zoom" start="100,100" end="110,110" time="300">focus</animation>
			<animation effect="zoom" start="110,110" end="100,100" time="300">unfocus</animation>
			<id>17</id>
			<posX>540</posX>
			<posY>20</posY>
			<width>40</width>
			<height>40</height>
			<textureFocus>button_shutdown_focus.png</textureFocus>
			<textureNoFocus>button_shutdown_nofocus.png</textureNoFocus>
			<label>1030</label>
			<textXOff>3000</textXOff>
			<action>99</action>
			<onleft>1111</onleft>
			<onright>18</onright>
			<onup>1111</onup>
			<ondown>50</ondown>
		</control>
		<control>
			<description>home button button</description>
			<type>button</type>
			<animation effect="zoom" start="100,100" end="110,110" time="300">focus</animation>
			<animation effect="zoom" start="110,110" end="100,100" time="300">unfocus</animation>
			<id>18</id>
			<posX>620</posX>
			<posY>20</posY>
			<width>40</width>
			<height>40</height>
			<textureFocus>button_home_focus.png</textureFocus>
			<textureNoFocus>button_home_nofocus.png</textureNoFocus>
			<label>2143</label>
			<textXOff>3000</textXOff>
			<action>115</action>
			<onleft>17</onleft>
			<onright>19</onright>
			<onup>1111</onup>
			<ondown>50</ondown>
		</control>
		<control>
			<description>exit button</description>
			<type>button</type>
			<animation effect="zoom" start="100,100" end="110,110" time="300">focus</animation>
			<animation effect="zoom" start="110,110" end="100,100" time="300">unfocus</animation>
			<id>19</id>
			<posX>700</posX>
			<posY>20</posY>
			<width>40</width>
			<height>40</height>
			<textureFocus>button_close_focus.png</textureFocus>
			<textureNoFocus>button_close_nofocus.png</textureNoFocus>
			<label>4517</label>
			<textXOff>3000</textXOff>
			<action>97</action>
			<onleft>18</onleft>
			<onright>1112</onright>
			<onup>1111</onup>
			<ondown>50</ondown>
		</control>


		<!-- INFOSERVICE RSS FEED -->
		<import>myHome_Infoservice.xml</import>

		<!-- FANART SCRAPER -->
		<import>myHome_Fanart_Scraper.xml</import>	

		<!-- OVERLAY -->
		<import>minioverlay.xml</import>	
	</controls>
</window>