			<height>40</height>
			<textureFocus>Basic_focus.png</textureFocus>
			<textureNoFocus>Basic_nofocus.png</textureNoFocus>
			<label>2143</label>
			<textXOff>3000</textXOff>
			<action>115</action>
			<onleft>17</onleft>
			<onright>19</onright>
			<onup>1111</onup>
			<ondown>112</ondown>
		</control>
