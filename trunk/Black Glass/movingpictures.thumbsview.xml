<?xml version="1.0" encoding="utf-8"?>
<!-- 
This file should contain the list view
-->
<window>
	<controls>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>458</posX>
			<posY>48</posY>
			<width>948</width>
			<height>766</height>
			<texture>bg_facade.png</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>490</posX>
			<posY>47</posY>
			<width>790</width>
			<height>53</height>
			<texture>bg_facade_line_nofocus.png</texture>
			<colordiffuse>77ffffff</colordiffuse>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>


		<control>
			<type>label</type>
			<description>Number of Files Label</description>
			<id>0</id>
			<posX>510</posX>
			<posY>665</posY>
			<label>#MovingPictures.general.filteredmoviecount #MovingPictures.Translation.Movies.Label</label>
			<font>font16</font>
			<align>left</align>
			<textcolor>60ffffff</textcolor>
			<visible>[facadeview.smallicons|facadeview.largeicons]+control.isvisible(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>

		<control>
			<description>Cover Art</description>
			<type>image</type>
			<id>60</id>
			<keepaspectratio>no</keepaspectratio>
			<posX>62</posX> 
			<posY>88</posY> 
			<width>245</width> 
			<height>348</height> 
			<texture flipY="true" diffuse="Thumb_Mask.png">#MovingPictures.Coverart</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>

		<control>
			<description>Cover Art Glass Overlay</description>
			<type>image</type>
			<id>0</id>
			<posX>30</posX>
			<posY>83</posY>
			<width>283</width>
			<height>360</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">DVDCase.png</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>




		<control>
			<description>Watched Icon Background</description>
			<type>image</type>
			<id>0</id>
			<posX>276</posX>
			<posY>109</posY>
			<width>32</width>
			<height>40</height>
			<colordiffuse>b0ffffff</colordiffuse>
			<texture>overlaywubg.png</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)+ control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control> 

		<control>
			<description>Watched Icon</description>
			<type>image</type>
			<id>0</id>
			<posX>282</posX>
			<posY>113</posY>
			<width>24</width>
			<height>24</height>
			<texture>overlaywatched.png</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)+control.isvisible(9)+ control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>

		<control>
			<description>Un-Watched Icon</description>
			<type>image</type>
			<id>0</id>
			<posX>282</posX>
			<posY>113</posY>
			<width>24</width>
			<height>24</height>
			<texture>overlayunwatched.png</texture>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.isvisible(50)+!control.isvisible(9)+ control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>imagelist</type>
			<id>1</id>
			<posX>30</posX>
			<posY>456</posY>
			<width>302</width>
			<height>40</height>
			<textureWidth>22</textureWidth>
			<textureHeight>22</textureHeight>
			<subitems>
				<subitem>UserRatingStarOff.png</subitem>
				<subitem>stargood.png</subitem>
			</subitems>
			<orientation>horizontal</orientation>
			<align>left</align>
			<imagesToDraw>10</imagesToDraw>
			<percentage>#MovingPictures.SelectedMovie.score.rounded</percentage>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>fadelabel</type>
			<description>Current program title</description>
			<id>1</id>
			<posX>30</posX>
			<posY>485</posY>
			<width>420</width>
			<font>font22</font>
			<label>#selecteditem</label>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.hasfocus(50)</visible>  
			<animation effect="fade" time="250">visiblechange</animation>
			<wrapString> : : : </wrapString>
		</control>
		<control>
			<description>Genre value</description>
			<type>fadelabel</type>
			<id>1</id>
			<posX>30</posX>
			<posY>527</posY>
			<width>420</width>
			<label>#MovingPictures.SelectedMovie.genres</label>
			<textcolor>90FFFFFF</textcolor>
			<visible>[facadeview.largeicons|facadeview.smallicons] + control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<wrapString> : : : </wrapString>
		</control>
		<control>
			<description>Runtime value</description>
			<type>fadelabel</type>
			<id>1</id>
			<posX>30</posX>
			<posY>559</posY>
			<width>420</width>
			<label>#MovingPictures.SelectedMovie.year  .  #MovingPictures.SelectedMovie.certification  .  #MovingPictures.SelectedMovie.runtime.localized.long</label>
			<textcolor>90FFFFFF</textcolor>
			<visible>[facadeview.largeicons|facadeview.smallicons] + control.hasfocus(50) + !player.hasmedia</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<wrapString> : : : </wrapString>
		</control>

		<control>
			<description>Summary</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>30</posX>
			<posY>593</posY>
			<width>420</width>
			<height>75</height>
			<font>font12</font>
			<textcolor>ffFFFFFF</textcolor>
			<label>#MovingPictures.SelectedMovie.summary</label>
			<visible>[facadeview.largeicons|facadeview.smallicons]+control.hasfocus(50)+!player.hasmedia</visible>
			<seperator>: : :</seperator>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>

	</controls>
</window>