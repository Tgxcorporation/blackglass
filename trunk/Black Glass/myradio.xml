<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>30</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>[facadeview.list|facadeview.smallicons|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label:666</define>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>
		<import>common.window.xml</import>
		<import>common.time.xml</import>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" time="50">WindowClose</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>			
			<control>

				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)</visible>
			</control>

			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="fade" time="450" reversible="true">visible</animation>
				<animation effect="fade" time="450" reversible="true">hidden</animation>
				<posX>0</posX>
				<posY>100</posY>
				<visible>!control.hasfocus(50)</visible>
				<layout>StackLayout</layout>
				<control>
					<description>View-As</description>
					<type>button</type>
					<id>2</id>
					<label>100</label>
					<onright>50</onright>
					<onup>17</onup>
					<ondown>3</ondown>
				</control>
				<control>
					<description>Sort</description>
					<type>sortbutton</type>
					<id>3</id>
					<onright>50</onright>
					<ondown>6</ondown>
					<onup>2</onup>
				</control>
				<control>
					<description>Previous</description>
					<type>button</type>
					<id>6</id>
					<label>210</label>
					<onright>50</onright>
					<action>15</action>
					<ondown>7</ondown>
					<onup>3</onup>
				</control>
				<control>
					<description>Next</description>
					<type>button</type>
					<id>7</id>
					<label>209</label>
					<onright>50</onright>
					<action>14</action>
					<ondown>8</ondown>
					<onup>6</onup>
				</control>
				<control>
					<description>Radio Guide</description>
					<type>button</type>
					<id>8</id>
					<label>533</label>
					<onright>50</onright>
					<ondown>2</ondown>
					<hyperlink>762</hyperlink>
					<onup>7</onup>
				</control>



			</control>
		</control>

		<import>common.facade.background.xml</import>
		<import>common.facade.pictures.xml</import>
		<control>
			<id>500</id>
			<type>image</type>
			<posX>40</posX>
			<posY>80</posY>
			<width>342</width>
			<height>255</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<keepaspectratio>yes</keepaspectratio>
			<centered>yes</centered>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>image</type>
			<id>1</id>
			<posX>30</posX>
			<posY>70</posY>
			<width>360</width>
			<height>273</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">PictureCase.png</texture>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>fadelabel</type>
			<description>Current program title</description>
			<posX>30</posX>
			<posY>375</posY>
			<width>350</width>
			<font>font22</font>
			<label>#selecteditem</label>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<wrapString> : : : </wrapString>
		</control>
		<control>
			<type>fadelabel</type>
			<description>Current program</description>
			<posX>30</posX>
			<posY>430</posY>
			<width>350</width>
			<label>#selecteditem2</label>
			<textcolor>ffffffff</textcolor>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<wrapString> : : : </wrapString>
		</control>
	</controls>
</window>