<?xml version="1.0" encoding="utf-8"?>

<!--            :: HIDDEN MENU ::            -->
<window>
	<controls>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" time="50">WindowClose</animation>
			<visible>control.isvisible(50)</visible>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>			
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
			</control>
			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
				<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
				<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
				<control>
					<type>group</type>
					<description>group element</description>
					<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
					<animation effect="fade" time="450" reversible="true">visible</animation>
					<animation effect="fade" time="450" reversible="true">hidden</animation>
					<posX>0</posX>
					<posY>100</posY>
					<width>220</width>
					<height>720</height>
					<layout>StackLayout</layout>
					<control>
						<description>Cycle View</description>
						<type>button</type>
						<id>2</id>
						<label>#MovingPictures.Translation.CycleView.Label</label>
						<onright>50</onright>
						<onup>17</onup>
						<ondown>3</ondown>
					</control>
					<control>
						<description>Change View</description>
						<type>button</type>
						<id>3</id>
						<label>#MovingPictures.Translation.ChangeView.Label ...</label>
						<onright>50</onright>
						<onup>2</onup>
						<ondown>4</ondown>
					</control>
					<control>
						<description>Filter By</description>
						<type>button</type>
						<id>4</id>
						<label>#MovingPictures.Translation.FilterBy.Label ...</label>
						<onright>50</onright>
						<onup>3</onup>
						<ondown>14</ondown>
					</control>			  
					<control>
						<description>Sort By</description>
						<type>button</type>
						<id>14</id>
						<label>#MovingPictures.Translation.SortBy.Label: #MovingPictures.Sort.Field</label>					
						<onright>50</onright>
						<onup>4</onup>
						<ondown>15</ondown>
					</control>
					<control>
						<description>Parental controls</description>
						<type>button</type>
						<id>15</id>
						<label>#MovingPictures.Translation.ToggleParentalLock.Label</label>
						<onright>50</onright>
						<ondown>10</ondown>
						<onup>14</onup>
						<ondown>66610</ondown>
						<scrollStartDelaySec>1</scrollStartDelaySec>
						<scrollWrapString> | </scrollWrapString>
					</control>
					<control>
						<description>Video Settings</description>
						<type>button</type>
						<id>66610</id>
						<hyperlink>703</hyperlink>
