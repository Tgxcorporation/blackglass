						<onup>15</onup>
						<onright>50</onright>
						<ondown>999</ondown>         
					</control>
					<control>
						<description>SubCentral</description>
						<id>999</id>
						<type>button</type>
						<label>Check for Subtitles</label>
						<hyperlink>84623</hyperlink>
						<visible>plugin.isenabled(SubCentral)</visible>
						<onup>66610</onup>
						<onright>50</onright>
						<ondown>2</ondown>     
					</control>
				</control>
				<control>
					<id>0</id>
					<label>#MovingPictures.Translation.SortDirection.Label</label>
					<type>image</type>
					<width>16</width>
					<height>16</height>
					<posX>350</posX>
					<posY>278</posY>
					<texture>movingpictures_Sort#MovingPictures.Sort.Direction.png</texture>
					<visible>!control.hasfocus(50)+control.isvisible(50)</visible>
				</control>
			</control>
