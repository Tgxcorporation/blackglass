<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<controls>

		<control>
			<description>DEFAULT BACKGROUND WHEN FANART NOT AVAILABLE</description>
			<id>0</id>
			<type>multiimage</type>
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>
			<imagepath>radio</imagepath>
			<timeperimage>20000</timeperimage>
			<fadetime>250</fadetime>
			<loop>yes</loop>
			<randomize>True</randomize>  
			<visible>plugin.isenabled(Fanart Handler)</visible>
			<animation effect="fade" start="0" end="100" time="250" delay="80" reversible="false">Visible</animation>
			<animation effect="fade" start="100" end="0" time="250" reversible="false">Hidden</animation>
		</control> 

		<control>
			<description>BG</description>
			<type>image</type>
			<id>0</id>
			<width>1280</width>
			<height>720</height>
			<texture>bg.jpg</texture>
			<colordiffuse>c0ffffff</colordiffuse>
			<visible>plugin.isenabled(Fanart Handler)</visible>
		</control>
	</controls>
</window>