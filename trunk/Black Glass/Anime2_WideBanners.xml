<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>6006</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>no</allowoverlay>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<define>#header.label:Wide Banners</define>
	<disabletopbar>yes</disabletopbar>
	<define>#title.color:ffffffff</define>
	<!-- Titles Color     Default: ffdedede-->
	<define>#smalltitle.color:ffffffff</define>
	<!-- Small Titles Color     Default: ff999999 -->
	<define>#text.color:ffffffff</define>
	<!-- Text Color     Default: ffffffff-->
	<define>#default.color:ffffffff</define>
	<!-- Normal List Color     Default: ffffffff-->
	<define>#watched.color:ffffffff</define>
	<!-- Watched List Color     Default: ff666666 -->
	<define>#notpresent.color:ffffffff</define>
	<!-- File Not Present in List Color     Default: ffef6d16 -->
	<controls>
		<!-- :::::::::::::: BACKGROUNDS :::::::::::::: -->
		<control>
			<description>BG</description>
			<type>image</type>
			<id>1</id>
			<width>1280</width>
			<height>720</height>
			<texture>bg.jpg</texture>    
		</control>
		<control>
			<type>label</type>
			<id>0</id>
			<posX>30</posX>
			<posY>10</posY>
			<label>#header.label</label>
			<font>font28</font>
			<align>left</align>
			<textcolor>60ffffff</textcolor>
		</control>
		<!-- :::::::::::::: INFO LABELS :::::::::::::: -->




		<control>
			<description>WideBanners Source Label</description>
			<type>label</type>
			<id>0</id>
			<posX>380</posX>
			<posY>35</posY>
			<width>700</width>
			<font>font12</font>
			<label>Source:</label>
			<textcolor>90ffffff</textcolor>
		</control>
		<control>
			<description>Poster Source</description>
			<type>label</type>
			<id>0</id>
			<posX>450</posX>
			<posY>31</posY>
			<width>700</width>
			<font>font14</font>
			<label>#Anime2.WideBanners.SelectedSource</label>
		</control>

		<control>
			<description>IsDisabled Label</description>
			<type>label</type>
			<id>0</id>
			<posX>650</posX>
			<posY>35</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Disabled:</label>
			<textcolor>90ffffff</textcolor>
		</control>
		<control>
			<description>IsDisabled</description>
			<type>label</type>
			<id>0</id>
			<posX>755</posX>
			<posY>31</posY>
			<width>700</width>
			<font>font14</font>
			<label>#Anime2.WideBanners.SelectedBannerIsDisabled</label>
		</control>

		<control>
			<description>Is Default Label</description>
			<type>label</type>
			<id>0</id>
			<posX>855</posX>
			<posY>35</posY>
			<width>700</width>
			<font>font12</font>
			<label>Is Default:</label>
			<textcolor>90ffffff</textcolor>
		</control>
		<control>
			<description>Is Default:</description>
			<type>label</type>
			<id>0</id>
			<posX>945</posX>
			<posY>31</posY>
			<width>700</width>
			<font>font14</font>
			<label>#Anime2.WideBanners.SelectedBannerIsDefault</label>
		</control>

		<!--  ************** HIDDEN MENU *****************  -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" time="0">WindowClose</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>13</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>				
			<control>

				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)</visible>
			</control>

			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="fade" time="450" reversible="true">visible</animation>
				<animation effect="fade" time="450" reversible="true">hidden</animation>
				<posX>0</posX>
				<posY>100</posY>
				<visible>!control.hasfocus(50)</visible>
				<layout>StackLayout</layout>
				<control>
					<description>Random Wide Banners</description>
					<type>togglebutton</type>
					<id>13</id>
					<label>Random Wide Banners</label>
					<onleft>50</onleft>
					<ondown>140</ondown>
					<onup>141</onup>
					<onright>50</onright>
				</control>
				<control>
					<description>Fanart</description>
					<type>button</type>
					<id>140</id>
					<label>Fanart</label>
					<onleft>50</onleft>
					<onup>13</onup>
					<ondown>141</ondown>
					<onright>50</onright>
				</control>

				<control>
					<description>Posters</description>
					<type>button</type>
					<id>141</id>
					<label>Posters</label>
					<onleft>50</onleft>
					<onup>140</onup>
					<ondown>13</ondown>
					<onright>50</onright>
				</control>
			</control>
		</control>


		<!-- :::::::::::::: THUMBNAILPANEL :::::::::::::: -->
		<control>
			<type>group</type>
			<description>group element</description>
			<control>
				<description>composite control consisting of a thumbnail panel</description>
				<type>facadeview</type>
				<id>50</id>
				<control>
					<description>graphical thumbpanel</description>
					<type>thumbnailpanel</type>
					<id>50</id>
					<posX>11</posX>
					<posY>70</posY>
					<width>1300</width>
					<height>660</height>
					<!-- up/down buttons & page # -->     
					<onleft>13</onleft>
					<onright>50</onright>		  
					<!-- Text -->
					<font>font16</font>
					<selectedColor>00ffffff</selectedColor>
					<textcolor>ffffffff</textcolor>
					<colordiffuse>ffffffff</colordiffuse>
					<remoteColor>FF868686</remoteColor>
					<!-- watched color -->
					<downloadColor>FFFFFFFF</downloadColor>
					<!-- not watched color (normal) -->
					<textcolor>FFC14E4A</textcolor>
					<!-- local file not present color -->
					<textcolor2>FFC14E4A</textcolor2>
					<!-- local file not present color  column 2-->
					<textcolor3>FFC14E4A</textcolor3>
					<!-- local file not present color column 3-->
					<suffix>|</suffix>		  
					<itemWidthBig>422</itemWidthBig>
					<itemHeightBig>91</itemHeightBig>
					<!-- boxes -->
					<textureWidthBig>413</textureWidthBig>
					<textureHeightBig>87</textureHeightBig>
					<!-- banners -->
					<thumbWidthBig>399</thumbWidthBig>
					<thumbHeightBig>73</thumbHeightBig>
					<thumbPosXBig>7</thumbPosXBig>
					<thumbPosYBig>7</thumbPosYBig>
					<thumbZoom>no</thumbZoom>
					<!-- text (No banner) -->
					<textXOff>0</textXOff>
					<textYOff>0</textYOff>
					<keepaspectratio>no</keepaspectratio>
					<enableFocusZoom>no</enableFocusZoom>
					<unfocusedAlpha>120</unfocusedAlpha>     
					<spinWidth>40</spinWidth>
					<spinHeight>40</spinHeight>
					<spinPosX>2185</spinPosX>
					<spinPosY>660</spinPosY>
					<spinAlign>Right</spinAlign>
					<spinColor>60ffffff</spinColor>
					<frameNoFocus>BannerCase.png</frameNoFocus> 
					<frameFocus>BannerCase.png</frameFocus>
					<imageFolder>BannerCase.png</imageFolder>
					<imageFolderFocus>BannerCase.png</imageFolderFocus>
					<spinCanFocus>no</spinCanFocus>
					<scrollOffset>0</scrollOffset>

				</control>
			</control>
		</control>
		<import>common.time.xml</import>
	</controls>
</window>