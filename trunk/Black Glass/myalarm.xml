<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
  <id>5000</id>
  <defaultcontrol>50</defaultcontrol>
  <allowoverlay>yes</allowoverlay>
  <define>#header.label:#MyAlarm.Translation.Alarm.Label</define>
  <define>#header.image:alarm_logo.png</define>
  <controls>
    <control>
      <description>BG</description>
      <type>image</type>
      <id>0</id>
      <width>720</width>
      <height>576</height>
      <texture>background.png</texture>
      <colorkey>0</colorkey>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <control>
      <description>logo</description>
      <type>image</type>
      <id>0</id>
      <posX>250</posX>
      <posY>20</posY>
      <texture>#header.image</texture>
      <colorkey>0</colorkey>
      <colordiffuse>ffffffff</colordiffuse>
    </control>
    <control>
      <description>Title of window</description>
      <type>label</type>
      <id>0</id>
      <posX>20</posX>
      <posY>20</posY>
      <label>#header.label</label>
      <font>font12</font>
      <textcolor>77ffffff</textcolor>
    </control>

    <import>common.time.xml</import>


    <!--Dummy Labels for conditional visibility-->
    <control>
      <description>CurrentAlarm.Enabled</description>
      <type>label</type>
      <id>61</id>
      <label> </label>
      <visible>string.equals(#MyAlarm.SelectedAlarm.Enabled,True)</visible>
    </control>
    <control>
      <description>CurrentAlarm.Recurring</description>
      <type>label</type>
      <id>62</id>
      <label> </label>
      <visible>string.equals(#MyAlarm.SelectedAlarm.Recurring,True)</visible>
    </control>


    <!--Button group on the left-->
    <control>
      <type>actiongroup</type>
      <description>action menu</description>
      <defaultcontrol>2</defaultcontrol>
      <onexit>50</onexit>
      <buttonX>0</buttonX>
      <buttonY>0</buttonY>
      <buttonwidth>60</buttonwidth>
      <buttonheight>576</buttonheight>
      <textureFocus>Action_focus.png</textureFocus>
      <textureNoFocus>Action_nofocus.png</textureNoFocus>
      <width>320</width>
      <height>576</height>
      <dimColor>00ffffff</dimColor>
      <control>
        <description>group element</description>
        <type>group</type>
        <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
        <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
        <visible>!Control.HasFocus(50)</visible>
        <control>
          <description>group element</description>
          <type>group</type>
          <animation effect="slide" time="450" start="-300,0" reversible="false">visible</animation>
          <animation effect="slide" time="450" end="-300,0" reversible="false">hidden</animation>
          <posX>20</posX>
          <posY>150</posY>
          <layout>StackLayout</layout>
          <visible>!Control.HasFocus(50)</visible>
          <control>
            <description>New button</description>
            <type>button</type>
            <id>2</id>
            <!--
            <posX>60</posX>
            <posY>97</posY>
            -->
            <label>#MyAlarm.Translation.NewAlarm.Label</label>
            <onup>4</onup>
            <ondown>3</ondown>
            <onright>50</onright>
          </control>
          <!--
          not implemented yet in myalarm screen
          
          <control>
            <description>Rename button</description>
            <type>button</type>
            <id>3</id>
            <posX>60</posX>
            <posY>97</posY>
            <label>#MyAlarm.Translation.RenameAlarm.Label</label>
            <onup>2</onup>
            <ondown>4</ondown>
            <onright>50</onright>
          </control>
          <control>
            <description>Delete button</description>
            <type>button</type>
            <id>4</id>
            <posX>60</posX>
            <posY>97</posY>
            <label>#MyAlarm.Translation.DeleteAlarm.Label</label>
            <onup>3</onup>
            <ondown>2</ondown>
            <onright>50</onright>
          </control>
          -->
        </control>
      </control>
    </control>


    <!--Time Controls-->
    <control>
      <description>enabled alarm</description>
      <type>label</type>
      <posX>270</posX>
      <posY>100</posY>
      <label>#MyAlarm.Translation.Enabled.Label</label>
      <visible>string.equals(#MyAlarm.SelectedAlarm.Enabled,True)</visible>
    </control>
    <control>
      <description>disabled alarm</description>
      <type>label</type>
      <posX>270</posX>
      <posY>100</posY>
      <label>#MyAlarm.Translation.Disabled.Label</label>
      <visible>string.equals(#MyAlarm.SelectedAlarm.Enabled,False)</visible>
    </control>


    <!--Time Controls-->
    <control>
      <description>Time</description>
      <type>label</type>
      <posX>270</posX>
      <posY>137</posY>
      <label>#MyAlarm.Translation.Time.Label</label>
    </control>
    <control>
      <description>alarm time</description>
      <type>label</type>
      <posX>400</posX>
      <posY>140</posY>
      <label>#MyAlarm.SelectedAlarm.Time.shorttime</label>
    </control>


    <!--Date controls for OnceAlarm-->
    <control>
      <description>Date</description>
      <type>label</type>
      <posX>270</posX>
      <posY>177</posY>
      <label>#MyAlarm.Translation.Date.Label</label>
      <visible>!Control.IsVisible(62)</visible>
    </control>
    <control>
      <description>alarm date</description>
      <type>label</type>
      <posX>400</posX>
      <posY>180</posY>
      <label>#MyAlarm.SelectedAlarm.Time.shortdate</label>
      <visible>!Control.IsVisible(62)</visible>
    </control>


    <!--Day controls for RecurringAlarm-->
    <control>
      <description>Enabled Days</description>
      <type>label</type>
      <posX>270</posX>
      <posY>180</posY>
      <label>#MyAlarm.Translation.EnabledOnTheseDays.Label</label>
      <visible>Control.IsVisible(62)</visible>
    </control>
    <control>
      <description>Monday</description>
      <type>label</type>
      <posX>270</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Mon.ShortLocalized</label>
    </control>
    <control>
      <description>Tuesday</description>
      <type>label</type>
      <posX>335</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Tue.ShortLocalized</label>
    </control>
    <control>
      <description>Wednesday</description>
      <type>label</type>
      <posX>400</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Wed.ShortLocalized</label>
    </control>
    <control>
      <description>Thursday</description>
      <type>label</type>
      <posX>465</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Thu.ShortLocalized</label>
    </control>
    <control>
      <description>Friday</description>
      <type>label</type>
      <posX>530</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Fri.ShortLocalized</label>
    </control>
    <control>
      <description>Saturday</description>
      <type>label</type>
      <posX>585</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Sat.ShortLocalized</label>
    </control>
    <control>
      <description>Sunday</description>
      <type>label</type>
      <posX>645</posX>
      <posY>210</posY>
      <label>#MyAlarm.SelectedAlarm.Sun.ShortLocalized</label>
    </control>


    <!--media type-->
    <control>
      <description>Media Type</description>
      <type>label</type>
      <posX>270</posX>
      <posY>240</posY>
      <label>#MyAlarm.SelectedAlarm.MediaType.localized</label>
    </control>
    <control>
      <description>Media Type</description>
      <type>label</type>
      <id>0</id>
      <label>#MyAlarm.SelectedAlarm.Sound</label>
      <posX>270</posX>
      <posY>270</posY>
      <visible>string.equals(#MyAlarm.SelectedAlarm.MediaType.id,File)</visible>
    </control>
    <control>
      <description>Media Type</description>
      <type>label</type>
      <id>0</id>
      <label>#MyAlarm.SelectedAlarm.Playlist</label>
      <posX>270</posX>
      <posY>270</posY>
      <visible>string.equals(#MyAlarm.SelectedAlarm.MediaType.id,Playlist)</visible>
    </control>
    <control>
      <description>Media Type</description>
      <type>label</type>
      <id>0</id>
      <label>#MyAlarm.SelectedAlarm.Message</label>
      <posX>270</posX>
      <posY>270</posY>
      <visible>string.equals(#MyAlarm.SelectedAlarm.MediaType.id,Message)</visible>
    </control>


    <!--
    common facade from aMPed skin.
    when you optimised this file for your own skin, you can use   <import>common.facade.xml</import>   instead
    -->
    <control>
      <description>group element</description>
      <type>group</type>
      <animation effect="fade" time="250">WindowOpen</animation>
      <animation effect="fade" time="250">WindowClose</animation>
      <visible>!Control.HasFocus(50)</visible>
      <control>
        <description>composite control consisting of a list control and a thumbnail panel</description>
        <type>facadeview</type>
        <id>50</id>
        <control>
          <description>listcontrol</description>
          <type>listcontrol</type>
          <id>50</id>
          <animation effect="slide" time="450" start="-600,0">Focus</animation>
          <animation effect="slide" time="450" end="-600,0">UnFocus</animation>
          <posX>32</posX>
          <posY>150</posY>
          <width>230</width>
          <height>360</height>
        </control>
      </control>
    </control>
  </controls>
</window>