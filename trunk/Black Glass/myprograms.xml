<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>3</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>[facadeview.list|facadeview.smallicons|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label:#curheader</define>
	<controls>
		<import>common.window.xml</import>
		<import>common.time.xml</import>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" time="50">WindowClose</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>2</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>			
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)</visible>
			</control>

			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="fade" time="450" reversible="true">visible</animation>
				<animation effect="fade" time="450" reversible="true">hidden</animation>
				<posX>0</posX>
				<posY>100</posY>
				<visible>!control.hasfocus(50)</visible>
				<layout>StackLayout</layout>
				<control>
					<description>View-As</description>
					<type>button</type>
					<id>2</id>
					<label>100</label>
					<onright>50</onright>
					<onup>17</onup>
				</control>
				<control>
					<description>Switch View</description>
					<type>button</type>
					<id>4</id>
					<label>457</label>
					<onright>50</onright>
					<ondown>3</ondown>
				</control>
				<control>
					<description>Refresh</description>
					<type>button</type>
					<id>3</id>
					<label>184</label>
					<onright>50</onright>
					<ondown>99</ondown>
				</control>
			</control>
		</control>
		

	<control>
			<id>6</id>
			<type>image</type>
			<posX>40</posX>
			<posY>78</posY>
			<width>346</width>
			<height>260</height>
			<keepaspectratio>yes</keepaspectratio>
			<texture flipY="true" diffuse="Thumb_Mask.png"></texture>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
			<centered>yes</centered>
		</control>
		<control>
			<type>image</type>
			<id>1</id>
			<posX>30</posX>
			<posY>71</posY>
			<width>365</width>
			<height>276</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">PictureCase.png</texture>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
	<control>
			<type>label</type>
			<description>Current program title</description>
			<posX>30</posX>
			<posY>375</posY>
			<width>350</width>
			<font>font22</font>
			<label>#selecteditem</label>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<control>
			<type>label</type>
			<description>Current program</description>
			<posX>30</posX>
			<posY>430</posY>
			<width>350</width>
			<label>#selecteditem2</label>
			<textcolor>ffffffff</textcolor>
			<visible>!facadeview.filmstrip+control.hasfocus(50)</visible>
			<animation effect="fade" time="250">visiblechange</animation>
		</control>
		<import>common.facade.background.xml</import>
		<import>common.facade.pictures.xml</import>
	</controls>
</window>