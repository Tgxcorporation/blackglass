<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<window>
	<id>4757</id>
	<defaultcontrol>50</defaultcontrol>
	<allowoverlay>[facadeview.list|facadeview.smallicons|facadeview.largeicons|facadeview.album|facadeview.playlist]</allowoverlay>
	<define>#header.label</define>
	<define>#header.image</define>
	<animation effect="fade" time="250">WindowOpen</animation>
	<animation effect="fade" time="250">WindowClose</animation>
	<controls>

		<!-- *** WINDOW DEFAULTS *** -->

		<import>common.window.xml</import>
		<import>common.time.xml</import>
		<import>common.facade.background.basic.xml</import>

		<control>
			<type>group</type>
			<control>
				<description>listcontrol</description>
				<type>listcontrol</type>
				<id>50</id>
				<scrollOffset>2</scrollOffset>
				<onleft>505</onleft>
				<textYOff>9</textYOff>
				<textXOff>10</textXOff>
				<textXOff2>475</textXOff2>
				<textYOff2>9</textYOff2>
				<textXOff3>510</textXOff3>
				<textYOff3>11</textYOff3>
			</control>
		</control>

		<control>
			<id>0</id>
			<type>image</type>
			<posX>40</posX>
			<posY>100</posY>
			<width>342</width>
			<height>255</height>
			<keepaspectratio>yes</keepaspectratio>
			<texture flipY="true" diffuse="Thumb_Mask.png">#selectedthumb</texture>
			<centered>yes</centered>
		</control>
		<control>
			<type>image</type>
			<id>0</id>
			<posX>30</posX>
			<posY>93</posY>
			<width>360</width>
			<height>273</height>
			<texture flipY="true" diffuse="Thumb_Mask.png">PictureCase.png</texture>
		</control>



		<control>
			<type>fadelabel</type>
			<description>Current title</description>
			<id>0</id>
			<posX>30</posX>
			<posY>375</posY>
			<width>360</width>
			<font>font22</font>
			<label>#selecteditem</label>

		</control>
		<control>
			<description>Owner Label</description>
			<type>label</type>
			<id>501</id>
			<posX>30</posX>
			<posY>417</posY>
			<width>350</width>
			<label>#OnlineVideos.Translation.Creator.Label: #OnlineVideos.owner</label>
			<textcolor>90ffffff</textcolor>
		</control>
		<control>
			<description>Description</description>
			<type>textboxscrollup</type>
			<id>0</id>
			<posX>30</posX>
			<posY>450</posY>
			<width>355</width>
			<height>98</height>
			<colordiffuse>ffffffff</colordiffuse>
			<font>font16</font>
			<label>#OnlineVideos.desc</label>
			<textcolor>White</textcolor>
			<seperator>: : :</seperator>
		</control> 


		<!-- *** HIDDEN MENU *** -->
		<control>
			<type>image</type>
			<id>0</id>
			<posX>-386</posX>
			<posY>3</posY>
			<width>418</width>
			<height>714</height>
			<texture>bg_left.png</texture>
			<colorDiffuse>ffffffff</colorDiffuse>
			<animation effect="fade" time="50">WindowClose</animation>
		</control>
		<control>
			<type>actiongroup</type>
			<description>action menu</description>
			<defaultcontrol>505</defaultcontrol>
			<onexit>0</onexit>
			<buttonX>0</buttonX>
			<buttonY>0</buttonY>
			<buttonwidth>56</buttonwidth>
			<buttonheight>720</buttonheight>
			<textureFocus>-</textureFocus>
			<textureNoFocus>-</textureNoFocus>
			<width>425</width>
			<height>720</height>
			<dimColor>00ffffff</dimColor>
			<animation effect="slide" time="250" start="-400,0" reversible="true">visible</animation>
			<animation effect="slide" time="250" end="-400,0" reversible="true">hidden</animation>
			<animation effect="slide" time="150" end="-400,0" reversible="true">WindowClose</animation>			
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>0</posY>
				<width>418</width>
				<height>720</height>
				<texture>bg_left.png</texture>
				<colorDiffuse>ffffffff</colorDiffuse>
				<visible>!control.hasfocus(50)</visible>
			</control>
			<control>
				<type>label</type>
				<id>1</id>
				<posX>30</posX>
				<posY>35</posY>
				<label>924</label>
				<font>font24</font>
				<align>left</align>
				<textcolor>ffffffff</textcolor>
			</control> 
			<control>
				<type>image</type>
				<posX>0</posX>
				<posY>47</posY>
				<width>385</width>
				<height>53</height>
				<texture>bg_button_nofocus.png</texture>
			</control>
			<control>
				<description>group element</description>
				<type>group</type>
				<animation effect="fade" time="450" reversible="true">visible</animation>
				<animation effect="fade" time="450" reversible="true">hidden</animation>
				<posX>0</posX>
				<posY>100</posY>
				<visible>!control.hasfocus(50)</visible>
				<layout>StackLayout</layout>
				<control>
					<type>button</type>
					<description>full update button</description>
					<id>505</id>
					<onright>50</onright>
					<onup>17</onup>          
					<ondown>504</ondown>
					<label>#OnlineVideos.Translation.FullUpdate.Label</label>
					<visible allowhiddenfocus="true">!Control.HasFocus(50)</visible>
				</control>         
				<control>
					<type>selectbutton</type>
					<description>Order By</description>
					<id>504</id>
					<onright>50</onright>
					<onup>505</onup>
					<ondown>503</ondown>
					<label>#OnlineVideos.Translation.SortOptions.Label</label>
					<visible>!Control.HasFocus(50)</visible>
				</control>   
				<control>
					<type>selectbutton</type>          
					<description>filter button</description>
					<id>503</id>
					<onright>50</onright>
					<onup>504</onup>
					<ondown>506</ondown>
					<label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.State.Label</label>
					<visible>!Control.HasFocus(50)</visible>
				</control>         
				<control>
					<type>selectbutton</type>          
					<description>filter button for Creator</description>
					<id>506</id>
					<onright>50</onright>
					<onup>503</onup>
					<ondown>507</ondown>
					<label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.Creator.Label</label>
					<visible>!Control.HasFocus(50)</visible>
				</control>         
				<control>
					<type>selectbutton</type>          
					<description>filter button for Language</description>
					<id>507</id>
					<onright>50</onright>
					<onup>506</onup>
					<ondown>502</ondown>
					<label>#OnlineVideos.Translation.Filter.Label: #OnlineVideos.Translation.Language.Label</label>
					<visible>!Control.HasFocus(50)</visible>
				</control>         
				<control>
					<type>button</type>
					<description>refresh button</description>
					<id>502</id>
					<onright>50</onright>
					<onup>507</onup>          
					<ondown>505</ondown>
					<label>#OnlineVideos.Translation.Refresh.Label</label>
					<visible>!Control.HasFocus(50)</visible>
				</control>             
			</control>    
		</control>    
	</controls>
</window>